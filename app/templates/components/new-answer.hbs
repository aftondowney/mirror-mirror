{{#if addNewAnswer}}
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="answer">Answer</label>
          {{input value=answer id="answer"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <button class="answer-save" {{action 'saveAnswer1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-sm new-answer"{{action 'answerFormShow'}}>New Answer</button>
{{/if}}
